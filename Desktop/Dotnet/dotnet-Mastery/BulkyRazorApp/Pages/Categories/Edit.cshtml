@model BulkyRazorApp.Pages.Categories.EditModel


<form action="" method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
        <h2>  Edit Category</h2>
        </hr>
    </div>



      
        <input  asp-for="Category.Id" class="form-control" hidden />


    <div class="mb-3 row">
         <label asp-for="Category.Name">Category Name </label>
         <input asp-for="Category.Name" type="text" class="form-control" /> 
         <span asp-validation-for="Category.Name" class="text-danger"></span>
    </div>

    <div class="mb-3 row">
        <label asp-for="Category.DisplayOrder">Display Order</label>
        <input asp-for="Category.DisplayOrder" class="form-control" type="text" />
        <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
    </div>

    <div class="row" style="display: flex; justify:center">
        <div class="col-4">
    <button type="submit" class="btn btn-primary" style="width:150px; ">Update</button>
        </div>
        <div class="col-6">
 <button type="submit" class="btn btn-danger">
        <a asp-page="/Categories/Index" style="width:150px color:white; text-decoration:none;">Back to List</a>
    </button>
        </div>

    </div>
</form>

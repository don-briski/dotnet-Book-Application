@page
@model BulkyRazorApp.Pages.Categories.IndexModel

<div class="container">
    <div class="row p4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
         
            <a   asp-page="/categories/create"  class="btn btn-primary">
               <i class="bi bi-plus-circle-dotted "></i>
               Create New Category</a>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
         <tr>
        <th>Category ID</th>
        <th>Category Name</th>
        <th>Display Order</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CategoryList.OrderBy(u => u.DisplayOrder) )
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.DisplayOrder</td>
                <td>
                    <a asp-page="/Categories/Edit" asp-route-id="@item.Id" class="btn btn-primary">
                        <i class="bi bi-pencil-square"></i>
                        Edit
                    </a>
                    <a asp-page="/Categories/Delete" asp-route-id="@item.Id" class="btn btn-danger">
                        <i class="bi bi-trash"></i>
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
   
  
</table>